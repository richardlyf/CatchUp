{
  "name": "CatchUp",
  "version": "1.0",
  "description": "Catch up with friends!",

  "permissions": ["declarativeContent", "storage"],

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

  "page_action": {
      "default_popup": "popup.html"
    },

  "manifest_version": 2
}
